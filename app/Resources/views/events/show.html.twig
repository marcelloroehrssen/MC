{% extends 'base.html.twig' %}

{% block body %}

    <h1>Event</h1>

    {% if bookable %}
        <a href="{{ path('event_book', {id:event.id} ) }}">Prenotati</a>
    {% else %}
        <b>Sei gi√† prenotato</b>
    {% endif %}

    <div class="month">
        <ul>
            <li class="prev">&#10094;</li>
            <li class="next">&#10095;</li>
            <li>{{ event.name }}<br><small>{{ event.location }} - {{ event.dateOpen | date("Y")}}</small></li>
        </ul>
    </div>

    <ul class="weekdays">
        <li>Mo</li>
        <li>Tu</li>
        <li>We</li>
        <li>Th</li>
        <li>Fr</li>
        <li>Sa</li>
        <li>Su</li>
    </ul>

    {% set firstDayOfTheMonth = (event.dateOpen | date('Y')) ~ "-" ~ (event.dateOpen | date('m')) ~ "-01"%}

    {% set weakDay = firstDayOfTheMonth | date('N') %}
    <ul class="days">
        {% for i in range(1,weakDay-1) %}
            <li></li>
        {% endfor %}

        {% set duration = 0 %}
        {% set eventStart = false %}
        {% for i in range(1,daysInMonth) %}

            {% if i == event.dateOpen | date('d') or duration > 0 %}
                {% if eventStart %}
                    {% set duration = duration - 1 %}
                {% else %}
                    {% set eventStart = true %}
                    {% set duration = event.duration - 1 %}
                {% endif %}

                <li><strong>{{ i }}</strong></li>

            {% else %}
                <li>{{ i }}</li>
            {% endif %}

        {% endfor %}
    </ul>

{% endblock %}

{% block stylesheets %}
    <style>
        ul {list-style-type: none;}
        body {font-family: Verdana, sans-serif;}

        /* Month header */
        .month {
            padding: 70px 25px;
            width: 100%;
            background: #1abc9c;
            text-align: center;
        }

        /* Month list */
        .month ul {
            margin: 0;
            padding: 0;
        }

        .month ul li {
            color: white;
            font-size: 20px;
            text-transform: uppercase;
            letter-spacing: 3px;
        }

        /* Previous button inside month header */
        .month .prev {
            float: left;
            padding-top: 10px;
        }

        /* Next button */
        .month .next {
            float: right;
            padding-top: 10px;
        }

        /* Weekdays (Mon-Sun) */
        .weekdays {
            margin: 0;
            padding: 10px 0;
            background-color:#ddd;
        }

        .weekdays li {
            display: inline-block;
            width: 13.6%;
            color: #666;
            text-align: center;
        }

        /* Days (1-31) */
        .days {
            padding: 10px 0;
            background: #eee;
            margin: 0;
        }

        .days li {
            list-style-type: none;
            display: inline-block;
            width: 13.6%;
            text-align: center;
            margin-bottom: 5px;
            font-size:12px;
            color: #777;
        }

        /* Highlight the "current" day */
        .days li .active {
            padding: 5px;
            background: #1abc9c;
            color: white !important
        }
    </style>
{% endblock %}